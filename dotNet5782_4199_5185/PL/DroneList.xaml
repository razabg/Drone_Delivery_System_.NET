<Window x:Class="PL.DroneList"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="DroneList" Height="450" Width="800">
    <Grid Name="MainGrid" Margin="10,10,0,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="100*"/>
            <RowDefinition Height="117*"/>
        </Grid.RowDefinitions>
        <Grid Name="UpGrid" Height="auto" Grid.Row="0" Width="auto" Margin="0,-13,0,13" RenderTransformOrigin="0.5,0.5">
            <Grid.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-0.196"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Grid.RenderTransform>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="185*"/>
                <ColumnDefinition Width="169*"/>
                <ColumnDefinition Width="46*"/>
                <ColumnDefinition Width="200*"/>
                <ColumnDefinition Width="200*"/>
            </Grid.ColumnDefinitions >
            <ComboBox x:Name="StatusSelector" Grid.Column="1" Margin="57,10,23,0" VerticalAlignment="Top" RenderTransformOrigin="0.555,2.567" Grid.ColumnSpan="2" Height="22"/>
            <Label x:Name="StatusSelectorLabel" Content="Select status:" HorizontalAlignment="Left" Margin="131,10,0,0" VerticalAlignment="Top" Height="26" Width="79" Grid.ColumnSpan="2" RenderTransformOrigin="0.599,1.172"/>
            <ComboBox x:Name="MaxWeight" Grid.Column="3" HorizontalAlignment="Left" Margin="80,7,0,0" VerticalAlignment="Top" Width="120"/>
            <Label x:Name="MaxWeightLablel" Content="Max weight" Grid.Column="3" HorizontalAlignment="Left" Margin="0,7,0,0" VerticalAlignment="Top"/>
        </Grid>
        <Button x:Name="AddDrone" Content="Add new drone" HorizontalAlignment="Left" Margin="648,-5,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.296,-0.397" Width="132"/>
        <Button Content="Close" HorizontalAlignment="Left" Margin="656,78,0,0" VerticalAlignment="Top" Width="116"/>
        <ListView x:Name="DroneListView" Margin="0,172,0,-71" Grid.RowSpan="2" SelectionChanged="DroneListView_SelectionChanged" d:ItemsSource="{d:SampleData}">
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>

    </Grid>

</Window>
