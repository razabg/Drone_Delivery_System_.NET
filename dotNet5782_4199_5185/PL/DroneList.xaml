<Window x:Class="PL.DroneList"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="DroneList" Height="450" Width="800">
    <Grid Name="MainGrid" Margin="10,10,0,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="26*"/>
            <RowDefinition Height="0*"/>
            <RowDefinition Height="129*"/>
            <RowDefinition Height="57*"/>
        </Grid.RowDefinitions>
        <Grid Name="UpGrid" Height="auto" Grid.Row="0" Width="auto" Margin="0,-13,0,13" RenderTransformOrigin="0.5,0.5" Grid.RowSpan="3">
            <Grid.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-0.196"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Grid.RenderTransform>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="102*"/>
                <ColumnDefinition Width="129*"/>
                <ColumnDefinition Width="88*"/>
                <ColumnDefinition Width="56*"/>
                <ColumnDefinition Width="15*"/>
                <ColumnDefinition Width="23*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="179*"/>
                <ColumnDefinition Width="198*"/>
            </Grid.ColumnDefinitions >
            <ComboBox x:Name="dronestatus" Grid.Column="2" Margin="6,10,5,0" VerticalAlignment="Top" RenderTransformOrigin="0.555,2.567" Grid.ColumnSpan="3" Height="22" SelectionChanged="StatusSelector_SelectionChanged"/>
            <Label x:Name="StatusSelectorLabel" Content="Select status:" HorizontalAlignment="Left" Margin="49,7,0,0" VerticalAlignment="Top" Height="26" Width="79" RenderTransformOrigin="0.599,1.172" Grid.Column="1"/>
            <ComboBox x:Name="MaxWeight" Grid.Column="7" HorizontalAlignment="Left" Margin="80,7,0,0" VerticalAlignment="Top" Width="120" Grid.ColumnSpan="2" Height="22" SelectionChanged="MaxWeight_SelectionChanged"/>
            <Label x:Name="MaxWeightLablel" Content="Max weight" Grid.Column="7" HorizontalAlignment="Left" Margin="5,7,0,0" VerticalAlignment="Top" Height="26" Width="71"/>
            <ListView x:Name="DroneListView" Grid.ColumnSpan="9" Margin="-2,62,6,-72" RenderTransformOrigin="0.469,0.639" SelectionChanged="ListView_SelectionChanged">
                <ListView.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform AngleY="0.643"/>
                        <RotateTransform Angle="-0.615"/>
                        <TranslateTransform Y="1.738"/>
                    </TransformGroup>
                </ListView.RenderTransform>
                <ListView.View>
                    <GridView>
                        <GridViewColumn/>
                    </GridView>
                </ListView.View>
            </ListView>
        </Grid>
        <Button x:Name="AddDrone" Content="Add new drone" HorizontalAlignment="Left" Margin="630,-9,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.296,-0.397" Width="132" Height="29"/>
        <Button Content="Close" HorizontalAlignment="Left" Margin="656,182,0,0" VerticalAlignment="Top" Width="116" RenderTransformOrigin="-0.664,-1" Grid.Row="3" Height="20"/>

    </Grid>

</Window>
